{
  "name": "remotemaster-server",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "node scripts/generate-build-info.js && node scripts/generate-readme-badges.js && next dev --turbopack",
    "build": "node scripts/generate-build-info.js && node scripts/generate-readme-badges.js && next build",
    "build:badges": "node scripts/generate-readme-badges.js",
    "build:info": "node scripts/generate-build-info.js",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --ci"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-context-menu": "^2.2.15",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toggle": "^1.1.9",
    "@radix-ui/react-tooltip": "^1.2.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.535.0",
    "next": "15.4.6",
    "next-intl": "^4.3.4",
    "next-themes": "^0.4.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-markdown": "^9.0.3",
    "remark-gfm": "^4.0.0",
    "react-hook-form": "^7.51.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "web-vitals": "^4.2.4",
    "zod": "^3.23.8",
    "zustand": "^5.0.7",
    "@octokit/rest": "^21.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/eslintrc": "^3",
    "@faker-js/faker": "^9.9.0",
    "@sentry/nextjs": "^8.27.0",
    "@storybook/addon-a11y": "^8.4.2",
    "@storybook/addon-essentials": "^8.4.2",
    "@storybook/addon-interactions": "^8.4.2",
    "@storybook/addon-links": "^8.4.2",
    "@storybook/nextjs": "^8.4.2",
    "@storybook/react": "^8.4.2",
    "@storybook/test": "^8.4.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20",
    "@types/react": "19.1.10",
    "@types/react-dom": "19.1.7",
    "chromatic": "^11.12.6",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "husky": "^9.1.6",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.10",
    "msw": "^2.10.4",
    "prettier": "^3.3.3",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5.9.2",
    "vitest": "^2.0.5"
  },
  "prepare": "husky",
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "**/*.{ts,tsx,js,jsx,json,css,md,mdx}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "@types/react": "19.1.10",
    "@types/react-dom": "19.1.7"
  }
}
